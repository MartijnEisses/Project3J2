<GridPane fx:id="gridBoard" fx:controller="root.controller.ConfigSenderController" xmlns:fx="http://javafx.com/fxml" styleClass="boardBackground" alignment="center" gridLinesVisible="true">

    <Label text="Register:" GridPane.columnIndex="0"  GridPane.rowIndex="0" GridPane.columnSpan="2"  GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <Label text="IGN" GridPane.columnIndex="0"
           GridPane.rowIndex="1" >
    </Label>
    <TextField fx:id="ignField" prefHeight="40" text="aiGroep7"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="IP:" GridPane.columnIndex="0"
           GridPane.rowIndex="2" >
    </Label>

    <TextField fx:id="ipField" prefHeight="40" text="127.0.0.1"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Port: " GridPane.columnIndex="0"
           GridPane.rowIndex="3" >
    </Label>

    <TextField fx:id="portField" prefHeight="40" text="7789"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Button fx:id="submitButton" text="Submit"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#handleSubmitButton">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>

    <stylesheets>
        <URL value="@Style.css" />
    </stylesheets>

</GridPane>